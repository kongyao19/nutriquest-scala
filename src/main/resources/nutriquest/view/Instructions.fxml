<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nutriquest.view.InstructionsController">

    <!-- TOP: Title -->
    <top>
        <VBox alignment="CENTER">
            <Label styleClass="title" text="How to Play">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>
            <padding>
                <Insets bottom="10.0" top="20.0" />
            </padding>
        </VBox>
    </top>

    <!-- CENTER: ScrollPane with content -->
    <center>
        <ScrollPane fitToWidth="true" maxHeight="600.0" maxWidth="1200.0">
            <content>
                <VBox fillWidth="true" spacing="15.0">
                    <children>
                        <Label styleClass="instruction-text" text="Objective:">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label styleClass="instruction-text" text="Move around the map and collect as many healthy foods as you can within 30 seconds. Each healthy food increases your score, while junk food decreases it. At the end, your score will be saved to the leaderboard." wrapText="true">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>

                        <Label styleClass="instruction-text" text="Controls:">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label styleClass="instruction-text" text="Use WASD keys or the Arrow Keys to move your character around the map." wrapText="true">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>

                        <Label styleClass="instruction-text" text="Food Types &amp; Points:">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label styleClass="instruction-text" text="• Protein: +15 points&#10;• Vitamin: +12 points&#10;• Carbs: +10 points&#10;• Healthy Fats: +18 points&#10;• Junk Food: -10 points" wrapText="true">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>

                        <Label styleClass="instruction-text" text="Game Mechanics:">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label styleClass="instruction-text" text="You have 30 seconds to collect as much food as possible. When the timer ends, your final score is recorded in the leaderboard. Collect healthy food for higher scores, and avoid junk food to prevent losing points!" wrapText="true">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>

                        <Label styleClass="instruction-text" text="Tips:">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label styleClass="instruction-text" text="• Focus on high-value foods like Healthy Fats (+18) and Protein (+15)&#10;• Avoid Junk Food (-10) whenever possible&#10;• Keep moving quickly — you only have 30 seconds&#10;• Aim for the highest score to top the leaderboard!" wrapText="true">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
            <BorderPane.margin>
                <Insets left="60.0" right="60.0" />
            </BorderPane.margin>
        </ScrollPane>
    </center>

    <!-- BOTTOM: Button -->
    <bottom>
        <VBox alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#handleBackToMenu" text="Back to Menu" />
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </bottom>

</BorderPane>
