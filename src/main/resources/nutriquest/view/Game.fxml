<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nutriquest.view.GameController">
    <children>
        <!-- Game Area (where all game objects will be added programmatically) -->
        <Pane fx:id="gameArea" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0" style="-fx-background-color: darkgreen;" />

        <!-- HUD at the top -->
        <HBox AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" spacing="30.0" style="-fx-background-color: rgba(0,0,0,0.7); -fx-padding: 15;">
            <children>
                <Label text="Score:" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="scoreLabel" text="0" textFill="YELLOW">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Time:" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="timeLabel" text="02:00" textFill="LIGHTGREEN">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Pause Text (centered and responsive) -->
        <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="60.0" AnchorPane.bottomAnchor="0.0"
                   mouseTransparent="true">
            <Label fx:id="pauseLabel" text="GAME PAUSED - Press SPACE to Resume"
                   textFill="WHITE" visible="false"
                   style="-fx-background-color: rgba(0,0,0,0.8); -fx-padding: 20;">
                <font>
                    <Font name="Arial Bold" size="24.0" />
                </font>
            </Label>
        </StackPane>
    </children>
</AnchorPane>